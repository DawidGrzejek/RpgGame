{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Run Angular UI",
        "type": "shell",
        "command": "npm start",
        "options": {
            "cwd": "${workspaceFolder}/src/RpgGame.AngularUI/rpg-game-ui"
        },
        "isBackground": true,
        "problemMatcher": {
            "owner": "typescript",
            "source": "ts",
            "fileLocation": "relative",
            "pattern": {
                "regexp": "\\b\\B",
                "file": 1,
                "location": 2,
                "message": 3
            },
            "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": "."
            }
        }
    },
    {
      "label": "build",
      "command": "dotnet build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/src/RpgGame.WebApi"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "args": ["watch", "run", "--launch-profile", "https"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/src/RpgGame.WebApi"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "dotnet",
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning|info)\\s+(\\w{1,2}\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "code": 5,
            "message": 6
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^info: Microsoft.Hosting.Lifetime",
          "endsPattern": "(Application started|Now listening on|dotnet watch)"
        }
      }
    }
]
}